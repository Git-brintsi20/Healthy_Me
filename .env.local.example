# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (for server-side operations)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Google Cloud AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-vertex-ai-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=text-bison

# AI Studio Configuration
AI_STUDIO_API_KEY=your_ai_studio_api_key_here
AI_STUDIO_PROJECT_ID=your-ai-studio-project-id

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=HealthyME
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered nutrition facts and myth-busting app

# Admin Configuration
ADMIN_EMAIL=admin@healthyme.com
ADMIN_PASSWORD=your_admin_password_here
SUPER_ADMIN_EMAILS=admin@healthyme.com,superadmin@healthyme.com

# User Roles
DEFAULT_USER_ROLE=user
ADMIN_ROLE=admin
SUPER_ADMIN_ROLE=super_admin

# Development/Production Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Optional: External API Keys
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_for_food_images
NUTRITION_API_KEY=your_nutrition_api_key_here

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
HOTJAR_ID=your_hotjar_id

# Optional: Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Optional: Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password