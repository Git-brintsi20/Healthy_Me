{
  "name": "HealthyME - Nutrition Facts & Myth Busting",
  "short_name": "HealthyME",
  "description": "AI-powered nutrition facts analysis and myth-busting web app. Get science-backed answers to nutrition questions and debunk common health myths.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#10b981",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["health", "fitness", "lifestyle", "education"],
  "icons": [

    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Search Nutrition",
      "short_name": "Search",
      "description": "Search for nutrition facts and food information",
      "url": "/?shortcut=search",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Myth Busting",
      "short_name": "Myths",
      "description": "Browse and fact-check nutrition myths",
      "url": "/myths?shortcut=myths",
      "icons": [
        {
          "src": "/icons/shortcut-myths.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My History",
      "short_name": "History",
      "description": "View your search history and saved items",
      "url": "/history?shortcut=history",
      "icons": [
        {
          "src": "/icons/shortcut-history.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Favorites",
      "short_name": "Favorites",
      "description": "Access your favorite nutrition facts and myths",
      "url": "/favorites?shortcut=favorites",
      "icons": [
        {
          "src": "/icons/shortcut-favorites.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "HealthyME Home Page - Desktop"
    },
    {
      "src": "/screenshots/mobile-search.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "HealthyME Search - Mobile"
    },
    {
      "src": "/screenshots/mobile-myths.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "HealthyME Myth Busting - Mobile"
    }
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+healthyme",
      "url": "/?search=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://healthyme.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}